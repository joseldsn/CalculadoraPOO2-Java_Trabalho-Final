<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="calculator.gui.CalculatorController">
    <children>
        <TextField fx:id="textField" layoutX="25.0" layoutY="15.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="75.0"
                   prefWidth="250.0" text="">
            <font>
                <Font size="40.0"/>
            </font>
        </TextField>
        <GridPane layoutX="25.0" layoutY="125.0" prefHeight="240.0" prefWidth="250.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="0"
                        GridPane.rowIndex="9">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <!-- Números -->
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="1"
                        GridPane.rowIndex="7">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="2"
                        GridPane.columnIndex="1" GridPane.rowIndex="7">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="3"
                        GridPane.columnIndex="2" GridPane.rowIndex="7">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="4"
                        GridPane.rowIndex="5">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="5"
                        GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="6"
                        GridPane.columnIndex="2" GridPane.rowIndex="5">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="7"
                        GridPane.rowIndex="3">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="8"
                        GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#addNumber" prefHeight="60.0" prefWidth="60.0" text="9"
                        GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>

                <!-- Outros botões -->
                <Button mnemonicParsing="false" onAction="#performOperation" prefHeight="60.0" prefWidth="60.0" text="="
                        GridPane.columnIndex="1" GridPane.rowIndex="9">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#clearTextField" prefHeight="60.0" prefWidth="60.0" text="C"
                        GridPane.columnIndex="2" GridPane.rowIndex="9">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>

                <!-- Operadores -->
                <Button mnemonicParsing="false" onAction="#setAdditionOperation" prefHeight="60.0" prefWidth="60.0"
                        text="+" GridPane.columnIndex="3" GridPane.rowIndex="3">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#setSubtractionOperation" prefHeight="60.0" prefWidth="60.0"
                        text="-" GridPane.columnIndex="3" GridPane.rowIndex="5">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#setMultiplicationOperation" prefHeight="60.0"
                        prefWidth="60.0" text="*" GridPane.columnIndex="3" GridPane.rowIndex="7">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#setDivisionOperation" prefHeight="60.0" prefWidth="60.0"
                        text="/" GridPane.columnIndex="3" GridPane.rowIndex="9">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
        <Text fx:id="savedNumbers" layoutX="30.0" layoutY="30.0" strokeType="OUTSIDE" strokeWidth="0.0"/>
    </children>
</AnchorPane>
